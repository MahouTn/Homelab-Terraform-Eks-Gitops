pipeline {
    agent any

    environment {
        AWS_ACCOUNT_ID = '802617578034'
        AWS_REGION = 'eu-west-1'
        ECR_REPO = 'homelab-eks'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/MahouTn/Homelab-Terraform-Eks-Gitops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Pointing to the deploy folder for Dockerfile
                    sh "docker build -t ${ECR_REPO}:${IMAGE_TAG} ./deploy"
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                    sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
                }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    sh "docker tag ${ECR_REPO}:${IMAGE_TAG} ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}:${IMAGE_TAG}"
                    sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}:${IMAGE_TAG}"
                }
            }
        }

        
    }
}
