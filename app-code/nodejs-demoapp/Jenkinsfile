pipeline {
  agent {
    kubernetes {
      label 'kaniko-agent'
      defaultContainer 'kaniko'
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
    - /busybox/sh
    args:
    - -c
    - "sleep 1000000"
    tty: true
"""
    }
  }

  stages {
    stage('Build & Push') {
      steps {
        container('kaniko') {
          script {
            sh '''
            /kaniko/executor \
              --context ${WORKSPACE}/deploy \
              --dockerfile ${WORKSPACE}/deploy/Dockerfile \
              --destination 802617578034.dkr.ecr.eu-west-1.amazonaws.com/homelab-eks:latest \
              --insecure \
              --skip-tls-verify
            '''
          }
        }
      }
    }
  }
}
