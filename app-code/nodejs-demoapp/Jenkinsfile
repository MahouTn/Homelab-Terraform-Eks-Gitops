pipeline {
    agent {
        kubernetes {
            namespace 'ci-cd'
            serviceAccount 'kaniko-sa'
            containerTemplates([
                containerTemplate(
                    name: 'kaniko',
                    image: 'gcr.io/kaniko-project/executor:latest',
                    tty: true,
                    alwaysPullImage: true
                )
            ])
            label 'kaniko-agent'
        }
    }

    environment {
        // --- Static AWS & Image Variables ---
        AWS_ACCOUNT_ID = '802617578034'
        AWS_REGION = 'eu-west-1'
        ECR_REPO = 'homelab-eks'
        IMAGE_TAG = 'latest' // Or any static tag you want
        IMAGE_FULL_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}:${IMAGE_TAG}"
    }

    stages {
        stage('Build and Push Image') {
            steps {
                container('kaniko') {
                    sh """
                    /kaniko/executor \
                        --context=\${WORKSPACE}/deploy \
                        --dockerfile=\${WORKSPACE}/deploy/Dockerfile \
                        --destination=${env.IMAGE_FULL_URI} \
                        --skip-tls-verify \
                        --insecure-pull
                    """
                }
            }
        }
    }
}
