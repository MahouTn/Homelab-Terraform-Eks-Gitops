pipeline {
    agent {
        kubernetes {
            namespace 'ci-cd'
            serviceAccount 'kaniko-sa'
            containerTemplates([
                containerTemplate(
                    name: 'kaniko',
                    image: 'gcr.io/kaniko-project/executor:latest',
                    tty: true,
                    alwaysPullImage: true,
                    command: '/kaniko/executor',
                    args: ''  // leave empty
                )
            ])
            label 'kaniko-agent'
        }
    }

    environment {
        IMAGE_FULL_URI = '802617578034.dkr.ecr.eu-west-1.amazonaws.com/homelab-eks:latest'
    }

    stages {
        stage('Build and Push Image') {
            steps {
                container('kaniko') {
                    sh """
                    /kaniko/executor \
                        --context=/workspace/deploy \
                        --dockerfile=/workspace/deploy/Dockerfile \
                        --destination=802617578034.dkr.ecr.eu-west-1.amazonaws.com/homelab-eks:latest \
                        --skip-tls-verify \
                        --insecure-pull
                    """
                }
            }
        }
    }
}
