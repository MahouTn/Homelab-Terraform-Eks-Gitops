pipeline {
    agent {
        kubernetes {
            namespace 'ci-cd'
            serviceAccount 'kaniko-sa'
            containerTemplates([
                containerTemplate(
                    name: 'kaniko',
                    image: 'gcr.io/kaniko-project/executor:latest',
                    tty: true,
                    alwaysPullImage: true,
                    command: '/kaniko/executor', // keep alive
                    args: ''
                )
            ])
            label 'kaniko-agent'
        }
    }

    environment {
        AWS_REGION = 'eu-west-1'
        ECR_REPO = 'homelab-eks'
        AWS_ACCOUNT_ID = '802617578034'
        IMAGE_TAG = 'latest'
        IMAGE_FULL_URI = '802617578034.dkr.ecr.eu-west-1.amazonaws.com/homelab-eks:latest'
    }

    stages {
        stage('Build and Push Image') {
            steps {
                container('kaniko') {
                    sh """
                    /kaniko/executor \
                        --context=\${WORKSPACE}/deploy \
                        --dockerfile=\${WORKSPACE}/deploy/Dockerfile \
                        --destination=\${IMAGE_FULL_URI} \
                        --skip-tls-verify \
                        --insecure-pull
                    """
                }
            }
        }
    }
}
