pipeline {
    environment {
        IMAGE_FULL_URI = '802617578034.dkr.ecr.eu-west-1.amazonaws.com/homelab-eks:latest'
        AWS_REGION = 'eu-west-1'
    }

    agent {
        kubernetes {
            yaml '''
kind: Pod
metadata:
  name: kaniko-builder
  namespace: ci-cd
spec:
  serviceAccountName: kaniko-sa
  containers:
  - name: kaniko
    image: 802617578034.dkr.ecr.eu-west-1.amazonaws.com/kaniko-aws:latest
    imagePullPolicy: Always
    command:
     - /bin/bash
     - -c
     - "tail -f /dev/null"
    tty: true
'''
            defaultContainer 'kaniko'
        }
    }

    stages {
        stage('Build and Push Image') {
            steps {
                container('kaniko') {
                    sh '''
                    set -ex
                    REGISTRY_DOMAIN=$(echo ${IMAGE_FULL_URI} | cut -d/ -f1)

                    /kaniko/executor \
                        --context=${WORKSPACE}/app-code/nodejs-demoapp/build \
                        --dockerfile=Dockerfile \
                        --destination=${IMAGE_FULL_URI} \
                        --skip-tls-verify-registry=${REGISTRY_DOMAIN}
                    '''
                }
            }
        }
    }
}
